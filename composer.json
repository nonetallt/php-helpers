{
    "name": "nonetallt/php-helpers",
    "description": "The things you always need but never feel like coding again.",
    "keywords": ["helpers"],
    "type": "library",
    "require": {
        "php": "^7.2",
        "guzzlehttp/guzzle": "^6.3",
        "jakeasmith/http_build_url": "^1",
        "jawira/case-converter": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "spatie/phpunit-watcher": "^1.22"
    },
    "suggest": {
        "ext-libxml": "Required to use XmlParser class and dependent classes like XmlHttpClient"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jyri Mikkola",
            "email": "jyri.mikkola@pp.inet.fi"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": { 
            "Nonetallt\\Helpers\\": "src/Classes/"
        },
        "files": [
            "src/strings.php",
            "src/generic.php",
            "src/arrays.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        },
        "files": [
            "test/bootstrap.php"
        ]
    }
}
