{
    "name": "nonetallt/php-helpers",
    "description": "The things you always need but never feel like coding again.",
    "keywords": ["helpers"],
    "type": "library",
    "require": {
        "php": ">=7.0.0",
        "elleyeayeme/case-converter": "^1.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "spatie/phpunit-watcher": "^1.8"
    },
    "suggest": {
        "ext-libxml": "Required to use XmlParser class and dependent classes like XmlHttpClient"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jyri Mikkola",
            "email": "jyri.mikkola@pp.inet.fi"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": { 
            "Nonetallt\\Helpers\\": "src/Classes/"
        },
        "files": [
            "src/strings.php",
            "src/generic.php",
            "src/arrays.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    }
}
